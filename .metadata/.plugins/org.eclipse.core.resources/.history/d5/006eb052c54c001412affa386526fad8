#ifndef CYLINDER_H_
#define CYLINDER_H_
#include <iostream>
#include "circle.h"

class Cylinder: public Circle
{
public:
	Cylinder(double x = 0, double y = 0, double r = 0, double h = 0);
	~Cylinder();
	void SetHeight (double);
	double GetHeight() const;
	double area() const;
	double volume() const;
	friend ostream & operator << (ostream &, const Cylinder&);
private:
	double height;
};



#endif /* CYLINDER_H_ */
